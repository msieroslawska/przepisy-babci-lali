---
import RecipeListLayout from "@layouts/RecipeListLayout.astro";
import RecipeCard from "@components/RecipeCard.astro";
import { getMappedRecipes } from "../lib/contentful";

const mappedRecipes = await getMappedRecipes();
---

<RecipeListLayout title="Recipes">
  {mappedRecipes.map(recipe => <RecipeCard {...recipe} />)}
</RecipeListLayout>
