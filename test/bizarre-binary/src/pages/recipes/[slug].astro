---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import RecipeLayout from '@layouts/recipeLayout.astro';
import { contentfulClient } from "../../lib/contentful";
import type { RecipeSkeleton } from "../../types"

export async function getStaticPaths() {
  const entries = await contentfulClient.getEntries<RecipeSkeleton>({
    content_type: "recipe",
  });

  const pages = entries.items.map((item) => ({
    params: { slug: item.fields.slug },
    props: {
      title: item.fields.title,
      description: documentToHtmlString(item.fields.description),
    },
  }));
  return pages;
}
const { description, title } = Astro.props;
---

<RecipeLayout title={title} description={description} />